@model List<Animalia>

<div class="container>">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                @if (Model.Count>0)
                {
                    <p>@Model.First().Arraza.Izena</p>
                }
                 
            </h2>
        </div>
    </div>
    <div class="row">
        @foreach (var obj in Model.OrderBy(u => u.ID))
        {
            <div class="card col-12 col-md-4">
                <img src="@obj.ImageUrl" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title text-center">@obj.Izena</h5>
                    <p class="card-text">Jaiotza data: @obj.urte_betetzea</p>
                    <p class="card-text">Sarrera data: @obj.Sarrera_data</p>
                </div>
            </div>

        }
    </div>

</div>
